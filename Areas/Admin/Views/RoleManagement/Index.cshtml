@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

<p>
    <a asp-area="RoleManagement" asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.RoleName</td>
                <td>
                    <a asp-area="RoleManagement" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <a asp-area="RoleManagement" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>