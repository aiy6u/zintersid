@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="auth-page-wrapper">
    <div class="auth-page-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">@ViewData["Title"]</h5>
                                <p class="text-muted">Log in using a recovery code. This login will not be remembered until you provide an authenticator app code or disable 2FA.</p>
                            </div>
                            <div class="p-2 mt-4">
                                <form method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                                    <div class="mb-3">
                                        <label asp-for="Input.RecoveryCode" class="form-label">Recovery Code <span class="text-danger">*</span></label>
                                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter recovery code" />
                                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                    </div>
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary w-100">Log in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}