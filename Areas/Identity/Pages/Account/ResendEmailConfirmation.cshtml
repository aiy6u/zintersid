@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="auth-page-wrapper">
    <div class="auth-page-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">@ViewData["Title"]</h5>
                                <p class="text-muted">Enter your email to resend the confirmation link.</p>
                            </div>
                            <div class="p-2 mt-4">
                                <form method="post">
                                    <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert"></div>
                                    <div class="mb-3">
                                        <label asp-for="Input.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Enter email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary w-100">Resend</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />    
}